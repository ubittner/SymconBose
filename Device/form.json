{
  "elements": [
    {
      "type": "Image",
      "image": "data:image/png;base64,"
    },
    {
      "type": "Label",
      "caption": "Bose SoundTouch Device"
    },
    {
      "type": "Label",
      "caption": " "
    },
    {
      "type": "Label",
      "caption": "This instance integrates Bose SoundTouch speakers into IP-Symcon."
    },
    {
      "type": "Label",
      "caption": "For further information, please refer to the documentation or the notes here in the configuration."
    },
    {
      "type": "Label",
      "caption": " "
    },
    {
      "type": "ExpansionPanel",
      "caption": "(0) Instance information",
      "items": [
        {
          "type": "Label",
          "caption": "Symcon Version:\t5.1>"
        },
        {
          "type": "Label",
          "caption": "Name:\t\t\tBose SoundTouch Device"
        },
        {
          "type": "Label",
          "caption": "Version:\t\t\t2.03-2006"
        },
        {
          "type": "Label",
          "caption": "Date:\t\t\tOctober 26, 2019"
        },
        {
          "type": "Label",
          "caption": "Time:\t\t\t18:00"
        },
        {
          "type": "Label",
          "caption": "Developer:\t\tUlrich Bittner"
        },
        {
          "type": "Label",
          "caption": "Prefix:\t\t\tBST"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(1) Device data",
      "items": [
        {
          "type": "Label",
          "caption": "You can optionally specify a name for the SoundTouch device, e.g. SoundTouch 10 living room:"
        },
        {
          "type": "ValidationTextBox",
          "name": "DeviceName",
          "caption": "Device name"
        },
        {
          "type": "Label",
          "caption": "Please specify the IP address of the SoundTouch device:"
        },
        {
          "type": "ValidationTextBox",
          "name": "DeviceIP",
          "caption": "IP-Address"
        },
        {
          "type": "Label",
          "caption": "Please specify the network timeout in milliseconds:"
        },
        {
          "type": "NumberSpinner",
          "name": "Timeout",
          "caption": "Timeout",
          "suffix": "ms"
        },
        {
          "type": "Label",
          "caption": "Please specify the interval for information update in seconds (0 = off):"
        },
        {
          "type": "NumberSpinner",
          "name": "UpdateInformationInterval",
          "caption": "Update interval",
          "suffix": "s"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(2) Additional audio sources",
      "items": [
        {
          "type": "Label",
          "caption": "Besides the device presets 1 - 6 you have the possibility to add additional audio sources or delete entries that are no longer needed:"
        },
        {
          "type": "List",
          "name": "CustomPresets",
          "rowCount": 10,
          "add": true,
          "delete": true,
          "sort": {
            "column": "Position",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Position",
              "name": "Position",
              "width": "150px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Source",
              "name": "Source",
              "width": "250px",
              "add": "INTERNET_RADIO",
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "Internet Radio",
                    "value": "INTERNET_RADIO"
                  },
                  {
                    "caption": "TuneIn",
                    "value": "TUNEIN"
                  },
                  {
                    "caption": "Amazon",
                    "value": "AMAZON"
                  },
                  {
                    "caption": "Spotify",
                    "value": "SPOTIFY"
                  }
                ]
              }
            },
            {
              "caption": "Description",
              "name": "Description",
              "width": "250px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Source specifications",
              "name": "SourceSpecifications",
              "width": "250px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Source account",
              "name": "SourceAccount",
              "width": "250px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Volume",
              "name": "Volume",
              "width": "150px",
              "add": 35,
              "edit": {
                "type": "NumberSpinner",
                "digits": 0,
                "suffix": "%"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(3) Visualisation",
      "items": [
        {
          "type": "Label",
          "caption": "Please select the functions that are to be displayed in the WebFront:"
        },
        {
          "type": "CheckBox",
          "name": "ShowZoneControl",
          "caption": "Zone control"
        },
        {
          "type": "CheckBox",
          "name": "ShowAudioSources",
          "caption": "Audio sources"
        },
        {
          "type": "CheckBox",
          "name": "ShowMediaInformation",
          "caption": "Media information"
        },
        {
          "type": "CheckBox",
          "name": "ShowTimer",
          "caption": "Timer"
        },
        {
          "type": "CheckBox",
          "name": "ShowAutomaticPowerOn",
          "caption": "Automatic power on"
        },
        {
          "type": "CheckBox",
          "name": "ShowAutomaticPowerOff",
          "caption": "Automatic power off"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(4) Publish media file",
      "items": [
        {
          "type": "Label",
          "caption": "Please select the media file to be published for audio notification on this system. After accepting the CHANGES press the PUBLISH MEDIA FILE button."
        },
        {
          "type": "SelectMedia",
          "name": "MediaFile",
          "caption": "Media file"
        },
        {
          "type": "Label",
          "caption": "After publishing, you can add the media file under point (5) Audio notifications."
        },
        {
          "type": "Label",
          "caption": "The published media file is located at http://symcon-server:3777/user/media/"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "(5) Audio notifications",
      "items": [
        {
          "type": "Label",
          "caption": "To use the Audio Notification API, you will need to enter your app key:"
        },
        {
          "type": "PasswordTextBox",
          "name": "AppKey",
          "caption": "App key"
        },
        {
          "type": "Label",
          "caption": "This indicates the service providing the notification. This text will appear on the device display (when available) and the SoundTouch application screen under artists:"
        },
        {
          "type": "ValidationTextBox",
          "name": "ServiceDescription",
          "caption": "Service description"
        },
        {
          "type": "Label",
          "caption": "This indicates further details about the notification. This text will appear on the device display (when available) and the SoundTouch application screen under album:"
        },
        {
          "type": "ValidationTextBox",
          "name": "MessageDescription",
          "caption": "Details about the notification"
        },
        {
          "type": "Label",
          "caption": ""
        },
        {
          "type": "Label",
          "caption": "Please specify the URL for your audio files. You can publish audio files for this system under point (4) Media files."
        },
        {
          "type": "Label",
          "caption": "Example URL: http://symcon-server:3777/user/media/audiofile.mp3"
        },
        {
          "type": "Label",
          "caption": "The description text will appear on the device display (when available) and the SoundTouch application screen under title:"
        },
        {
          "type": "List",
          "name": "AudioNotifications",
          "rowCount": 5,
          "add": true,
          "delete": true,
          "sort": {
            "column": "Position",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Position",
              "name": "Position",
              "width": "150px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Description",
              "name": "Description",
              "width": "250px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "URL",
              "name": "URL",
              "width": "250px",
              "add": "http://",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "Volume",
              "name": "Volume",
              "width": "150px",
              "add": 35,
              "edit": {
                "type": "NumberSpinner",
                "digits": 0,
                "suffix": "%"
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Action area",
      "items": [
        {
          "type": "Button",
          "caption": "Publish media file",
          "onClick": "BST_PublishMediaFile($id);"
        },
        {
          "type": "Button",
          "caption": "Show device information",
          "onClick": "$info = BST_GetDeviceInfo($id); print_r($info); IPS_LogMessage('BST', $info->asXML());"
        },
        {
          "type": "Button",
          "caption": "Show playing information",
          "onClick": "$info = BST_GetDeviceNowPlaying($id); print_r($info); IPS_LogMessage('BST', $info->asXML());"
        }
      ]
    }
  ],
